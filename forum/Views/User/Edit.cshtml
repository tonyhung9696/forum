@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "noimage.jpg");
}

<h1>Edit User</h1>

<form method="post" enctype="multipart/form-data" class="mt-3">
    <input hidden asp-for="ExistingPhotoPath" />
    <div class="form-group row">
        <label asp-for="website" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="website" class="form-control">
            <span asp-validation-for="website" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="introduction" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="introduction" class="form-control" rows="5"></textarea>
            <span asp-validation-for="introduction" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PhotoPath" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="PhotoPath" class="custom-file-input form-control">
                <label class="custom-file-label">Click here to change photo</label>
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-4">
        <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>